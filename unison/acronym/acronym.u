use base

abbreviate : Text -> Text
abbreviate test = Text.toCharList test
                    |> List.split (x -> ((x == ?-) || (x == ?\s)))
                    |> List.map (x -> List.filter (Char.ascii.isLetter) x)
                    |> Optional.mapOptional List.head
                    |> List.map Char.ascii.toUpper
                    |> Text.fromCharList
