steps : Nat -> Optional Nat
steps n = match n with 
    0 -> None
    n -> let
            go count n = match n with
                1                -> count
                n | Nat.isEven n -> go (count + 1) (n / 2)
                n                -> go (count + 1) (3 * n + 1)
            Some (go 0 n)
